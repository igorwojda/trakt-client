<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="match_parent"
				android:layout_height="match_parent">
	<TextView android:id="@+id/controller_trending_movie_list_error"
			  android:layout_width="wrap_content"
			  android:layout_height="wrap_content"
			  android:layout_centerHorizontal="true"
			  android:layout_centerVertical="true"
			  android:text="@string/dataLoadingError"
			  android:visibility="gone"/>
	<ProgressBar android:id="@+id/controller_trending_movie_list_progressBar"
				 android:layout_width="wrap_content"
				 android:layout_height="wrap_content"
				 android:layout_centerHorizontal="true"
				 android:layout_centerVertical="true"/>
	<android.support.v7.widget.RecyclerView
		android:id="@+id/controller_trending_movie_list_recycler_view"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
	/>
</RelativeLayout>
